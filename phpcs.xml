<?xml version="1.0"?>
<ruleset name="SameSiteExceptions">
    <description>wrapper round PSR12</description>
    <file>src</file>
    <file>tests</file>
    <exclude-pattern>vendor/*</exclude-pattern>
    <rule ref="PSR12">
        <exclude name="PSR12.Properties.ConstantVisibility.NotFound" />
    </rule>
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="300"/>
        </properties>
    </rule>
</ruleset>
